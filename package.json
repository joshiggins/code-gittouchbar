{
	"name": "gittouchbar",
	"displayName": "gittouchbar",
	"description": "An SCM-centric touchbar extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:gittouchbar.sync"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workbench.view.explorer",
				"group": "gittouchbar",
				"title": "Explorer",
				"icon": "./assets/explorer.png"
			},
			{
				"command": "workbench.view.scm",
				"group": "gittouchbar",
				"title": "SCM",
				"icon": "./assets/scm.png"
			},
			{
				"command": "workbench.action.showCommands",
				"group": "gittouchbar",
				"title": ">_"
			},
			{
				"command": "editor.action.formatDocument",
				"group": "gittouchbar",
				"title": "⇝ƒ⇜"
			},
			{
				"command": "git.stage",
				"group": "gittouchbar",
				"title": "Stage"
			},
			{
				"command": "git.stageSelectedRanges",
				"group": "gittouchbar",
				"title": "Stage Selection",
				"icon": "./assets/stage-selection.png"
			},
			{
				"command": "git.stageAll",
				"group": "gittouchbar",
				"title": "Stage All",
				"icon": "./assets/stage-all.png"
			},
			{
				"command": "git.sync",
				"group": "gittouchbar",
				"title": "Sync"
			}
		],
		"menus": {
			"touchBar": [
				{
					"command": "workbench.view.explorer",
					"group": "gittouchbar_1@1"
				},
				{
					"command": "workbench.view.scm",
					"group": "gittouchbar_1@2"
				},
				{
					"command": "workbench.action.showCommands",
					"group": "gittouchbar_1@3"
				},
				{
					"command": "git.sync",
					"group": "gittouchbar_2"
				},
				{
					"command": "git.stage",
					"group": "gittouchbar_3@1"
				},
				{
					"command": "git.stageSelectedRanges",
					"group": "gittouchbar_3@2"
				},
				{
					"command": "git.stageAll",
					"group": "gittouchbar_3@3"
				},
				{
					"command": "editor.action.formatDocument",
					"group": "gittouchbar_4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
